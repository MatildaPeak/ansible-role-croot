---

{% if 'apps.openshift.io' in api_groups %}
apiVersion: apps.openshift.io/v1
kind: DeploymentConfig
{% else %}
apiVersion: apps/v1
kind: Deployment
{% endif %}
metadata:
  name: {{ name }}
  namespace: {{ namespace }}
  labels:
    app: {{ name }}
    service: {{ name }}
spec:
  replicas: 1
{% if 'apps.openshift.io' in api_groups %}
  selector:
    app: {{ name }}
    service: {{ name }}
{% else %}
  selector:
    matchLabels:
      app: {{ name }}
      service: {{ name }}
{% endif %}
  template:

    metadata:
      labels:
        app: {{ name }}
        service: {{ name }}

    spec:

      containers:

      - image: registry.gitlab.com/matilda.peak/croot:{{ image_tag }}
        name: croot
        imagePullPolicy: {{ image_pull_policy }}
        ports:
        - containerPort: 8000
          protocol: TCP
        resources:
          requests:
            cpu: 100m
            memory: 16Mi
          limits:
            cpu: 1000m
            memory: 32Mi
